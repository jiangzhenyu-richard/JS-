<script>
    //1.获取字符串长度
    let arr = "asdv";
    console.log(arr.length);

    //2.获取某个字符的索引
    let arr1 = "abcd";
    console.log(arr1[1]);

    let ch = arr1[3];
    console.log(ch);

    //3.字符串查找 indexOf / lastIndexOf / includes
    let arr2 = "avawqockv";
    //从最前面开始找
    let ch1 = arr2.indexOf("a");
    //找最后一位数字
    let ch2 = arr2.lastIndexOf("v");
    //是否包含这个数
     let ch3 = arr2.includes("J");
    console.log(ch1,ch2,ch3);

    //4.字符串拼接
    let str1 = "www.";
    let str2 = "baiDu";
    let str3 = ".com";
    let str = str1+str2+str3;
    console.log(str);

    //5.截取字符串
    let str0 = "abcdefgh";
    // substr(索引，截取多少个)
    let subStr = str0.substr(1,6);
    console.log(subStr);

</script>
